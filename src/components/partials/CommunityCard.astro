---
import Button from "./Button.astro";

const { post } = Astro.props;
const { Content } = await post.render();
const { title, icon, link, link_label} = post.data;

---

<div class="friend-card">
    <span class="icon-community">{icon}</span>
    <h4>{title}</h4>
    <p>
        <Content />
    </p>
    <Button label={link_label} link={link} color="outline"/>
</div>

<style>
    .friend-card {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 1.5rem;
    text-align: center;
    text-decoration: none;
    color: var(--text-light);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 1px solid var(--primary-dark);
}

.friend-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 15px rgba(255, 0, 255, 0.3);
    border-color: var(--primary-color);
    background-color: rgba(255, 0, 255, 0.1);
    animation: friendCardGlitch 3s infinite;
}

@keyframes friendCardGlitch {
    0%, 100% {
        transform: translateY(-5px);
        border-color: var(--primary-color);
    }
    20% {
        transform: translateY(-7px) skewX(2deg);
        border-color: var(--glitch-color-1);
    }
    40% {
        transform: translateY(-5px);
        border-color: var(--primary-color);
    }
    60% {
        transform: translateY(-3px) skewX(-2deg);
        border-color: var(--glitch-color-2);
    }
    80% {
        transform: translateY(-5px);
        border-color: var(--primary-color);
    }
}

.friend-card h4 {
    margin-bottom: 0.75rem;
    color: var(--primary-light);
    font-family: monospace;
    letter-spacing: 1px;
}

.friend-card p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    font-family: monospace;
}

.icon-community {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    color: var(--primary-color);
}
</style>