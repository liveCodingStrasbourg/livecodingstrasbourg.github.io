---
import Button from "./Button.astro";

const { post } = Astro.props;
const { Content } = await post.render(); 
const { title, date, heure, lieu, audience, prix, lien } = post.data;

const eventDate = new Date(date);
eventDate.setUTCHours(12,0,0,0);

const day = eventDate.toLocaleDateString('fr-FR', { day: '2-digit', timeZone: 'UTC' });
const month = eventDate.toLocaleDateString('fr-FR', { month: 'short', timeZone: 'UTC' }).toUpperCase().replace('.', '');
const year = eventDate.toLocaleDateString('fr-FR', { year: 'numeric', timeZone: 'UTC' });
---

<div class="workshop-card">
    <div class="workshop-header">
        <div class="workshop-date">
            <span class="day">{day}</span>
            <span class="month">{month}</span>
            <span class="year">{year}</span>
        </div>
        <div class="workshop-title">
            <h3>{title}</h3>
        </div>
    </div>
    <div class="workshop-content">
        <div class="workshop-meta">
            <span><span class="icon-clock"></span> {heure}</span>
            <span><span class="icon-location"></span> {lieu}</span>
            <span><span class="icon-users"></span> {audience}</span> 
            <span><span class="icon-currency"></span> {prix}</span>
        </div>
        <div class="workshop-description">
            <Content />
        </div>
        { lien && <div class="workshop-actions">
            <Button label="Plus d'infos" link={lien} color="primary" />
        </div> }        
    </div>
</div>

<style>
.workshop-card {
    background-color: var(--card-background);
    border: 1px solid var(--primary-color);
    overflow: hidden;
    box-shadow: var(--box-shadow);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    position: relative;
}

.workshop-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        45deg,
        transparent 0%,
        rgba(255, 0, 255, 0.1) 50%,
        transparent 100%
    );
    animation: cardGlow 4s infinite;
    pointer-events: none;
}

@keyframes cardGlow {
    0%, 100% {
        opacity: 0.2;
        background-position: 0% 0%;
    }
    50% {
        opacity: 0.5;
        background-position: 100% 100%;
    }
}

.workshop-card:hover {
    transform: translateY(-5px) scale(1.01);
    box-shadow: 0 10px 20px rgba(255, 0, 255, 0.3);
    border-color: var(--secondary-color);
    /* animation: cardGlitch 0.3s infinite; */
}

@keyframes cardGlitch {
    0%, 100% {
        transform: translateY(-5px) scale(1.02);
    }
    25% {
        transform: translateY(-7px) scale(1.02) translateX(var(--glitch-offset));
    }
    50% {
        transform: translateY(-5px) scale(1.02);
    }
    75% {
        transform: translateY(-3px) scale(1.02) translateX(calc(var(--glitch-offset) * -1));
    }
}

.workshop-header {
    background: linear-gradient(90deg, var(--primary-dark), var(--primary-color));
    color: var(--text-light);
    padding: 1rem;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
}

.workshop-header::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(255, 255, 255, 0.2) 20%,
        transparent 40%
    );
    animation: headerGlow 3s infinite;
    pointer-events: none;
}

@keyframes headerGlow {
    0%, 100% {
        transform: translateX(-100%);
    }
    50% {
        transform: translateX(100%);
    }
}

.workshop-date {
    background-color: var(--background-dark);
    color: var(--secondary-color);
    padding: 0.5rem;
    text-align: center;
    width: 80px;
    margin-right: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border: 1px solid var(--secondary-color);
    font-family: monospace;
}

.workshop-date .day {
    font-size: 1.8rem;
    font-weight: bold;
}

.workshop-date .month {
    font-size: 1rem;
    text-transform: uppercase;
}

.workshop-date .year {
    font-size: 0.9rem;
}

.workshop-title {
    flex: 1;
}

.workshop-title h3 {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.workshop-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.workshop-meta {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    color: #aaa;
    font-family: monospace;
    font-size: 0.9rem;
}

.workshop-meta span {
    margin-right: 1.5rem;
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
}

.workshop-description {
    margin-bottom: 1.5rem;
    flex: 1;
    font-family: monospace;
}

.workshop-actions {
    margin-top: auto;
}





</style>