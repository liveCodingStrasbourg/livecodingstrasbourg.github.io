---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/general.css"

const { title } = Astro.props;

---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
