<style>
    /* Additional styles for the workshops documentation page */
    .docs-section {
        margin-bottom: 4rem;
    }

    .event-title {
        font-size: 3.5rem;
        letter-spacing: 3px;
        animation: eventTitleGlitch 8s infinite;
    }

    @keyframes eventTitleGlitch {
        0%, 100% {
            text-shadow: 4px 4px 0 var(--primary-color),
                        -4px -4px 0 var(--primary-light);
        }
        25% {
            text-shadow: -4px 4px 0 var(--glitch-color-1),
                          4px -4px 0 var(--glitch-color-2);
        }
        50% {
            text-shadow: 4px -4px 0 var(--primary-dark),
                        -4px 4px 0 var(--secondary-color);
        }
        75% {
            text-shadow: -4px -4px 0 var(--secondary-color),
                          4px 4px 0 var(--glitch-color-1);
        }
    }

    /* Workshop Container Layout */
    .workshop-container {
        display: flex;
        gap: 2rem;
        margin-top: 2rem;
    }

    .workshop-nav {
        flex: 0 0 200px;
    }

    .workshop-content {
        flex: 1;
    }

    @media (max-width: 768px) {
        .workshop-container {
            flex-direction: column;
        }

        .workshop-nav {
            flex: 0 0 auto;
        }
    }

    /* Workshop Navigation */
    .workshop-nav h3 {
        color: var(--primary-light);
        font-family: monospace;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--primary-color);
        padding-bottom: 0.5rem;
    }

    .workshop-nav ul {
        list-style: none;
        padding: 0;
    }

    .workshop-nav li {
        margin-bottom: 0.5rem;
    }

    .workshop-nav-link {
        display: block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: var(--text-light);
        font-family: monospace;
        border-left: 2px solid var(--primary-dark);
        transition: all 0.3s ease;
    }

    .workshop-nav-link:hover {
        color: var(--secondary-color);
        border-left-color: var(--secondary-color);
        background-color: rgba(0, 255, 0, 0.05);
        transform: translateX(3px);
    }

    /* Workshop Cards */
    .workshop-card {
        margin-bottom: 3rem;
        border: 1px solid var(--primary-color);
        background-color: var(--card-background);
        overflow: hidden;
        position: relative;
    }

    .workshop-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(to bottom,
            var(--primary-color) 0%,
            var(--secondary-color) 50%,
            var(--primary-color) 100%);
    }

    .workshop-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        background-color: rgba(0, 0, 0, 0.3);
        border-bottom: 1px solid var(--primary-dark);
    }

    .workshop-header h3 {
        font-family: monospace;
        font-size: 1.8rem;
        color: var(--primary-light);
        margin: 0;
    }

    .workshop-badges {
        display: flex;
        gap: 0.5rem;
    }

    .badge {
        padding: 0.25rem 0.75rem;
        font-size: 0.8rem;
        font-family: monospace;
        border-radius: 3px;
    }

    .badge.audio {
        background-color: rgba(255, 0, 255, 0.2);
        border: 1px solid var(--primary-color);
    }

    .badge.visual {
        background-color: rgba(0, 255, 255, 0.2);
        border: 1px solid var(--secondary-color);
    }

    .badge.python, .badge.ruby, .badge.javascript, .badge.haskell, .badge.sclang {
        background-color: rgba(255, 255, 0, 0.1);
        border: 1px solid rgba(255, 255, 0, 0.5);
    }

    .workshop-body {
        padding: 1.5rem;
    }

    .subsection {
        margin: 2rem 0;
    }

    .subsection:first-child {
        margin-top: 0;
    }

    .subsection h4 {
        color: var(--secondary-color);
        font-family: monospace;
        margin-bottom: 1rem;
        position: relative;
        display: inline-block;
    }

    .subsection h4::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -4px;
        width: 100%;
        height: 1px;
        background-color: var(--secondary-color);
    }

    /* Workshop List */
    .workshop-list {
        list-style: none;
        padding: 0;
    }

    .workshop-list li {
        display: flex;
        margin-bottom: 1.5rem;
        gap: 1rem;
    }

    .workshop-date {
        flex: 0 0 80px;
        color: var(--primary-light);
        font-family: monospace;
        font-size: 0.9rem;
        padding-top: 0.2rem;
    }

    .workshop-details {
        flex: 1;
    }

    .workshop-details h5 {
        margin: 0 0 0.5rem 0;
        color: var(--text-light);
        font-size: 1rem;
    }

    .workshop-details p {
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .resource-link {
        display: inline-block;
        font-size: 0.85rem;
        color: var(--secondary-color);
        text-decoration: none;
        border-bottom: 1px dotted var(--secondary-color);
        transition: all 0.3s ease;
    }

    .resource-link:hover {
        color: var(--text-light);
        border-bottom-style: solid;
    }

    /* Resources Grid */
    .resources-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    .resource-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background-color: rgba(0, 0, 0, 0.2);
        border: 1px solid var(--primary-dark);
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
    }

    .resource-card:hover {
        border-color: var(--secondary-color);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 255, 0, 0.2);
    }

    .resource-icon {
        flex: 0 0 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 255, 0, 0.1);
        border-radius: 5px;
        color: var(--secondary-color);
    }

    .resource-info h5 {
        margin: 0 0 0.25rem 0;
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .resource-info p {
        margin: 0;
        font-size: 0.8rem;
        color: var(--primary-light);
    }

    /* Troubleshooting */
    .troubleshooting {
        background-color: rgba(0, 0, 0, 0.2);
        border: 1px dashed var(--primary-dark);
        padding: 1rem;
    }

    .problem-solution {
        margin-bottom: 1rem;
    }

    .problem-solution:last-child {
        margin-bottom: 0;
    }

    .problem {
        font-weight: bold;
        color: var(--primary-light);
        margin-bottom: 0.25rem;
        font-family: monospace;
    }

    .solution {
        font-size: 0.9rem;
    }

    .solution code {
        background-color: rgba(0, 0, 0, 0.4);
        padding: 0.1rem 0.3rem;
        border-radius: 3px;
        font-family: monospace;
        color: var(--secondary-color);
    }

    /* Experiences Section */
    .exp-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 1.5rem;
    }

    .exp-card {
        border: 1px solid var(--primary-color);
        background-color: var(--card-background);
        transition: all 0.3s ease;
    }

    .exp-card:hover {
        transform: translateY(-5px);
        border-color: var(--secondary-color);
        box-shadow: 0 10px 20px rgba(0, 255, 0, 0.1);
    }

    .exp-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.2rem;
        background-color: rgba(0, 0, 0, 0.3);
        border-bottom: 1px solid var(--primary-dark);
    }

    .exp-header h3 {
        font-family: monospace;
        font-size: 1.2rem;
        color: var(--primary-light);
        margin: 0;
    }

    .exp-date {
        font-size: 0.8rem;
        color: var(--secondary-color);
        font-family: monospace;
    }

    .exp-content {
        padding: 1.5rem;
    }

    .exp-content p {
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

    .btn-outline {
        display: inline-block;
        border: 1px solid var(--primary-color);
        padding: 0.5rem 1rem;
        color: var(--text-light);
        text-decoration: none;
        font-family: monospace;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-outline:hover {
        border-color: var(--secondary-color);
        color: var(--secondary-color);
        background-color: rgba(0, 255, 0, 0.1);
    }
</style>
